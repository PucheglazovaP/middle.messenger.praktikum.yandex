mixin textbox(label, id, name, inputClass, labelClass, placeholder)
    div.input
        if label
            label(
                class=`textbox__label ${labelClass || ""}`
                for=id
                )= label
        input(
            type="text"
            class=`textbox__field ${inputClass || ""}`
            id=id
            name=name
            placeholder=placeholder
        )